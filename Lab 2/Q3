#include <iostream>
using namespace std;

class jaggedArray {
public:
    int** data;
    int* rowSizes;
    int numRows;

    jaggedArray(int r, int* sizes) : numRows(r) {
        rowSizes = new int[numRows];
        data = new int*[numRows];
        for (int i = 0; i < numRows; ++i) {
            rowSizes[i] = sizes[i];
            data[i] = new int[rowSizes[i]];
            for (int j = 0; j < rowSizes[i]; ++j)
                data[i][j] = 0;
        }
    }

    ~jaggedArray() {
        for (int i = 0; i < numRows; ++i)
            delete[] data[i];
        delete[] data;
        delete[] rowSizes;
    }

    void print() const {
        for (int i = 0; i < numRows; ++i) {
            cout << "Team " << i << ": ";
            for (int j = 0; j < rowSizes[i]; ++j) {
                cout << data[i][j] << " ";
            }
            cout << endl;
        }
        cout << endl;
    }

    int sum(int row) const {
        int total = 0;
        for (int j = 0; j < rowSizes[row]; ++j)
            total += data[row][j];
        return total;
    }

    void store(int r, int c, int value) {
        if (r >= 0 && r < numRows && c >= 0 && c < rowSizes[r]) {
            data[r][c] = value;
        } else {
            cout << "Invalid index (" << r << ", " << c << ")" << endl;
        }
    }
};

int main() {
    int sizes[3] = {3, 1, 4};
    jaggedArray teams(3, sizes);

    teams.store(0, 0, 5);
    teams.store(0, 1, 10);
    teams.store(0, 2, 8);

    teams.store(1, 0, 15);

    teams.store(2, 0, 20);
    teams.store(2, 1, 12);
    teams.store(2, 2, 18);
    teams.store(2, 3, 25);

    teams.print();

    for (int i = 0; i < 3; i++) {
        cout << "Total score of team " << i << " = " << teams.sum(i) << endl;
    }

    return 0;
}
