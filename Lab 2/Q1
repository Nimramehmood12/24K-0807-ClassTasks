#include<iostream>
using namespace std;

class DArray{
    private:
    int *arr;
    int size;
    int c;

    public:
void resize(){
    int nc=c*2;
    int *nda= new int[nc];


    for(int i=0;i<size;i++){
        nda[i]=arr[i];
    }
    delete[] arr;
    arr=nda;
    c=nc;
} 

DArray(int i){
    c=i;
    size=0;
    arr=new int[c];
}

~DArray(){
    delete[] arr;
}

void push_back(int v){
    if(size==c){
        resize();
    }
    arr[size++]=v;
}

void print() const{
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
}
};

int main(){
    DArray arr(3);
    arr.push_back(10);
    arr.push_back(20);
    arr.push_back(30);
    arr.push_back(40);
    arr.push_back(50);

    cout << "Array elements: ";
    arr.print();

    return 0;
}
