#include <iostream>
using namespace std;

void shellSort(int arr[], int n, int &comparisons) {
    for(int gap = n / 2; gap > 0; gap /= 2) {
        for(int i = gap; i < n; i++) {
            int temp = arr[i];
            int j = i;
            comparisons++;
            while(j >= gap && arr[j - gap] > temp) {
                arr[j] = arr[j - gap];
                j -= gap;
            }
            arr[j] = temp;
        }
    }
}

void printArray(int arr[], int size) {
    for (int i = 0; i < size; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    int n;
    cout << "Enter the size of the array: ";
    cin >> n;
    
    int arr[n];
    
    cout << "Enter " << n << " elements: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int comparisons = 0;
    cout << "Original Array: ";
    printArray(arr, n);
 
    shellSort(arr, n, comparisons);

    cout << "Sorted Array using Shell Sort: ";
    printArray(arr, n);
    cout << "Shell Sort Comparisons: " << comparisons << endl;

    return 0;
}
