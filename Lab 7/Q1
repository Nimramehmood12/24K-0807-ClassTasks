#include<iostream>
using namespace std;

class Participants{
	public:
	float time;
	string name;
};

void merge(Participants arr[],int l,int m,int r){
	int i=l;
	int j=m+1;
	int k=l;
	Participants temp[10];
	
	while(i<=m && j<=r){
		if(arr[i].time<arr[j].time){
			temp[k++]=arr[i];
			i++;
		}else{
			temp[k]=arr[j];
			j++;
			k++;
		}
	}
	while(i<=m){
		temp[k]=arr[i];
		i++,k++;
		
	}
	while(j<=r){
		temp[k]=arr[j];
		j++,k++;
	}
	
	for(int s=l;s<=r;s++){
		arr[s]=temp[s];
	}
}

void mergeSort(Participants arr[],int l,int r){
	if(l<r){
		int mid=l+(r-l)/2;
	   mergeSort(arr, l, mid);
       mergeSort(arr, mid + 1, r);

       merge(arr, l, mid, r);	
	}
}

int main() {
    Participants arr[10];

    cout << "Enter names and times of  10 participants:\n";
    for (int i = 0; i < 10; i++) {
        cout << "Participant " << i + 1 << " Name: ";
        cin >> arr[i].name;
        cout << "Time: ";
        cin >> arr[i].time;
    }

    mergeSort(arr, 0, 9);

    cout << "\n Top 5 Fastest Runners:\n";
    for (int i = 0; i < 5; i++) {
        cout << arr[i].name << " - " << arr[i].time << " seconds\n";
    }

    return 0;
}
